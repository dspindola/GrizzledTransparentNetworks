{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "emitBOM": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/app/*": ["src/app/*"],
      "@/libs/*": ["src/libs/*"],
      "!/server/*": ["src/types/server/*"],
      "!/client/*": ["src/types/client/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "app-env.d.ts"]
}
